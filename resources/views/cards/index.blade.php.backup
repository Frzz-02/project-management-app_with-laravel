@push('scripts')
<script>
/**
 * Cards Page Data Component
 * 
 * Manages the state and interactions for the cards page including:
 * - View switching (grid/list)
 * - Modal management
 * - Filter state management
 * - Card interactions
 */
function cardsPageData() {
    return {
        // View management
        currentView: 'grid',
        
        // Modal states
        selectedCard: null,
        editingCard: null,
        showCreateModal: false,


        /**
         * Initialize component
         */
        init() {
            // Load view preference from localStorage
            this.currentView = localStorage.getItem('cardsView') || 'grid';
            
            // Setup event listeners
            this.setupEventListeners();
        },


        /**
         * Toggle between grid and list view
         */
        toggleView() {
            this.currentView = this.currentView === 'grid' ? 'list' : 'grid';
            localStorage.setItem('cardsView', this.currentView);
        },


        /**
         * Setup event listeners for modals and interactions
         */
        setupEventListeners() {
            // Listen for card detail modal events
            document.addEventListener('show-card-detail', (e) => {
                this.selectedCard = e.detail;
            });

            // Listen for edit card modal events  
            document.addEventListener('show-edit-card', (e) => {
                this.editingCard = e.detail;
            });

            // Listen for create card modal events
            document.addEventListener('create-card-modal', () => {
                this.showCreateModal = true;
            });
        },


        /**
         * Close all modals
         */
        closeModals() {
            this.selectedCard = null;
            this.editingCard = null;
            this.showCreateModal = false;
        },


        /**
         * Refresh page data
         */
        refreshPage() {
            window.location.reload();
        }
    }
}


/**
 * Initialize Alpine.js stores for global state management
 */
document.addEventListener('alpine:init', () => {
    Alpine.store('cardModal', {
        // Modal visibility states
        detail: false,
        edit: false,
        create: false,
        
        // Selected card data
        selectedCard: null,
        
        // Open specific modal
        open(modalType, cardData = null) {
            this.closeAll();
            this[modalType] = true;
            if (cardData) {
                this.selectedCard = cardData;
            }
        },
        
        // Close all modals
        closeAll() {
            this.detail = false;
            this.edit = false;
            this.create = false;
            this.selectedCard = null;
        }
    });
});
</script>
